{
  "name": "Tab Limiter",
  "version": "1.1",
  "manifest_version": 1,
  "description": "Prevents having too many tabs open at once.",
  "browser_action": {
    "default_icon": "icon.png",
	"default_popup":"popup.html",
	"default_title":"View Options"
  },
  "icons":
  { 
    "16" : "icon48.png",
    "48" : "icon48.png",
	"128" : "icon48.png"
  },
  "background_page": "bg.html",
   "background": {
   // "page":"bg.html"
   //"scripts":["bg.js"]
  },
  "permissions": [
	"tabs",
	"notifications"
  ]
}
